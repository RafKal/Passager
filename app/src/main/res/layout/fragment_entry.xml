<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/entry_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    app:layout_insetEdge="none"
    tools:context=".entry">


    <EditText
        android:id="@+id/entry_Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_vertical"
        android:ems="10"
        android:inputType="text"
        android:text="Title"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/entry_username"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="text"
        android:text="Username"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/entry_Password"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/entry_URL"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="text"
        android:text="URL" />

    <EditText
        android:id="@+id/entry_Notes"
        android:layout_width="match_parent"
        android:layout_height="161dp"
        android:ems="10"
        android:gravity="center|top"
        android:inputType="text"
        android:text="Notes" />

    <Button
        android:id="@+id/entry_copy_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:insetTop="20dp"
        android:text="copy password" />

    <Button
        android:id="@+id/entry_edit_entry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:insetTop="20dp"
        android:text="edit entry" />

    <Button
        android:id="@+id/entry_delete_entry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:insetTop="20dp"
        android:text="delete entry" />

    <Button
        android:id="@+id/entry_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:insetTop="20dp"
        android:text="Back" />


</LinearLayout>

